#:kivy 1.0

RootWidget:
    orientation:'horizontal'

#
# Dashboard
#
    BoxLayout:
        orientation:'horizontal'
        padding: 10
        spacing: 1
        
        WidgetDashboard:
            id:id_dashboard
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.25
                Rectangle:
                    size: self.size
                    pos: self.pos
        
#
# Боковая панель
#
    BoxLayout:
        orientation :'vertical'
        padding     : 10
        spacing     : 10
        height      : root.height
        size_hint   : 0.25, 1

    #
    # Контейнер для кнопок
    #
        BoxLayout:
            orientation :'vertical'
            padding     : 1
            spacing     : 1
            height      : root.height
            size_hint   : 1, 1

            canvas.before:
                Color:
                    rgba: 1, 0, 0, 0.25
                Rectangle:
                    size: self.size
                    pos : self.pos

            Button:
                id          : BTN_CONNECT_TO_BROKER
                font_size   : 10
                size        : 96,16
                size_hint   : (None, 1)
                text        : 'connect'
                on_press    : root.cmd_connect()
            
            Slider:
                orientation:'horizontal'
                min:10
                max:90
                value:67
                size        : 96,32
                size_hint   : 1, 1
                on_value:id_dashboard._A = -int(self.value)
            Slider:
                orientation:'horizontal'
                min:10
                max:90
                size        : 96,32
                size_hint   : (1,None)
                on_value:id_dashboard._N = -int(self.value )
            Slider:
                orientation:'horizontal'
                min:10
                max:800
                size        : 96,32
                size_hint   : (1,None)
                on_value:id_dashboard._screenw = int( self.value )

    #
    # Список Станций
    #
        BoxLayout:
            id          : id_station_enums
            orientation :'vertical'
            padding     : 1
            spacing     : 1

            canvas.before:
                Color:
                    rgba: 0, 1, 0, 0.25
                Rectangle:
                    size: self.size
                    pos: self.pos