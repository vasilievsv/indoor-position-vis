#:kivy 1.0

RootWidget:
    orientation:'horizontal'

#
# Dashboard
#
    BoxLayout:
        orientation:'horizontal'
        padding: 10
        spacing: 1
        
        WidgetDashboard:
            id:id_dashboard
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.25
                Rectangle:
                    size: self.size
                    pos: self.pos
        
#
# Боковая панель
#
    BoxLayout:
        orientation :'vertical'
        padding     : 10
        spacing     : 10
        height      : root.height
        size_hint   : 0.25, 1

    #
    # Контейнер для кнопок
    #
        BoxLayout:
            orientation :'horizontal'
            padding     : 1
            spacing     : 1
            height      : root.height
            size_hint   : 1, 0.1

            canvas.before:
                Color:
                    rgba: 1, 0, 0, 0.25
                Rectangle:
                    size: self.size
                    pos : self.pos

            Button:
                id          : BTN_CONNECT_TO_BROKER
                font_size   : 9
                size        : 48,16
                size_hint   : .5, 1
                text        : 'connect'
                on_press    : root.cmd_connect()

#
# Список Станций
#
        BoxLayout:
            id          : id_station_enums
            orientation :'vertical'
            padding     : 1
            spacing     : 1

            canvas.before:
                Color:
                    rgba: 0, 1, 0, 0.25
                Rectangle:
                    size: self.size
                    pos: self.pos