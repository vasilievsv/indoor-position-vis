#:kivy 1.0

RootWidget:
    orientation:'horizontal'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.25
        Rectangle:
            size: self.size
            pos : self.pos
#
# Dashboard
#
    BoxLayout:
        orientation:'horizontal'
        padding: 5
        spacing: 1
        WidgetDashboard:
            id:id_dashboard
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.25
                Rectangle:
                    size: self.size
                    pos : self.pos
#
# Боковая панель
#
    BoxLayout:
        orientation :'vertical'
        padding     : 4
        spacing     : 2
        height      : root.height
        size_hint   : (0.30, 1)
    #
    # Контейнер для кнопок
    #
        Label:
            text        :'Параметры'
            font_size   : 12
            size_hint   : (None,0.1)
            
        BoxLayout:
            orientation :'vertical'
            padding     : 1
            spacing     : 1
            height      : root.height
            size_hint   : (1, 1)

            canvas.before:
                Color:
                    rgba: 1, 0, 0, 0.25
                Rectangle:
                    size: self.size
                    pos : self.pos
            Label:
                text     : 'TxPower(-dBm)'
                font_size: 10
            Slider:
                min         : 20
                max         : 90
                value       : 46
                size        : 96,32
                size_hint   : (1, None)
                on_value    : id_dashboard._A = -int(self.value)
            Label:
                text        : 'N'
                font_size   : 10
            Slider:
                min         : 2
                max         : 5
                value       : 5
                size        : 96,32
                size_hint   : (1,None)
                on_value    : id_dashboard._N = int(self.value )
            Label:
                text        : 'Scale'
                font_size   : 10
            Slider:
                min         : 1
                max         : 356
                value       :400
                size        : 96,32
                size_hint   : (1,None)
                on_value    : id_dashboard._screenw = int(self.value)
    #
    # Список Станций
    #
        Label:
            text     : 'Список Станций'
            font_size: 12
            size_hint: (None,0.1)
        BoxLayout:
            id          : id_station_enums
            orientation :'vertical'
            canvas.before:
                Color:
                    rgba: 0, 1, 0, 0.25
                Rectangle:
                    size: self.size
                    pos : self.pos
        Button:
            id          : BTN_CONNECT_TO_BROKER
            font_size   : 12
            size        : (96,16)
            size_hint   : (1, 0.25)
            text        : 'Подключение'
            on_press    : root.cmd_connect()