#:kivy 1.0

RootWidget:
    orientation:'horizontal'

    Button:
        id: but_1
        font_size: 20
        text: 'Start second thread'
        on_press: root.start_second_thread('123')

    BoxLayout:
        orientation:'vertical'
        padding: 10
        spacing: 1
        size_hint: (1, None)
        width: 10
        height: root.height

        canvas.before:
            Color:
                rgb: 0.2, 0.2, 0.2
            Rectangle:
                size: self.size
                pos: self.pos

    BoxLayout:
        orientation:'horizontal'
        padding: 1
        spacing: 1
        width: 10
        height: root.height

        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
                

        MyDashboardWidget:
            id: myvideo
